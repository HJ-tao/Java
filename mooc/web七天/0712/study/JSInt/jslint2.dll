<fieldset id="options" style="background-color: linen;"><legend>Options</legend>
  <div>
    <input id="passfail" type="checkbox"><label for="passfail">Stop on first error</label>
  <br>
    <input id="white" type="checkbox"><label for="white">Strict whitespace</label>
  <br>
    <input id="browser" type="checkbox"><label for="browser">Assume a browser</label>
  <br>
    <input id="widget" type="checkbox"><label for="widget">Assume a
        <a href="http://widgets.yahoo.com/gallery/view.php?widget=37484">Yahoo Widget</a></label>
  <br>
    <input id="rhino" type="checkbox"><label for="rhino">Assume
        <a href="http://www.mozilla.org/rhino/">Rhino</a></label>
  </div>
  <div>
    <input id="laxbreak" type="checkbox"><label for="laxbreak">Tolerate sloppy line breaking</label>
  <br>
    <input id="cap" type="checkbox"><label for="cap">Tolerate <tt>HTML</tt> case</label>
  <br>
    <input id="fragment" type="checkbox"><label for="fragment">Tolerate <tt>HTML</tt> fragments</label>
  <br>
    <input id="debug" type="checkbox"><label for="debug">Tolerate <tt>debugger</tt> statements</label>
  <br>
    <input id="evil" type="checkbox"><label for="evil">Tolerate <tt>eval</tt></label>
  </div>
  <div>
    <input id="undef" type="checkbox"><label for="undef">Disallow undefined variables</label>
  <br>
    <input id="nomen" type="checkbox"><label for="nomen">Disallow <tt>$</tt> and
    leading <tt>_</tt> in identifiers</label>
  <br>
    <input id="eqeqeq" type="checkbox"><label for="eqeqeq">Disallow
    <tt>==</tt> and <tt>!=</tt></label>
  <br>
    <input id="plusplus" type="checkbox"><label for="plusplus">Disallow <tt>++</tt> and
    <tt>--</tt></label>
  <br>
    <input id="bitwise" type="checkbox"><label for="bitwise">Disallow bitwise operators</label>
  <br>
    <input id="adsafe" type="checkbox"><label for="adsafe">Adsafe</label>
  </div>
  <div>
    <input id="recommended" value="Recommended" type="button">
  <br>
  <br>
    <input id="goodparts" value="Good Parts" type="button">
  </div>
</fieldset>
